<h1>Eat-da-Burgers!</h1>

<h2>Burgers ready to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{this.burger_name}}
      {{> burgers/burgers-block devoured=false}}
      <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
    		Devour it!
    	</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <div class="myName">{{this.burger_name}}</div>
      {{> burgers/burgers-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
